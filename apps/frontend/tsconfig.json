{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
